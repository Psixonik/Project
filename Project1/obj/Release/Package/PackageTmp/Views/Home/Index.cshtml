@{
    ViewBag.Title = "Home Page";
}
<link rel="stylesheet" href="~/Content/css/Home/index.css">
<form method="post" action="/Home/Index">
    <div class="container">
        <h1>Регистрация</h1>
        <p>Введите данные</p>
        <hr>

        <label for="email"><b>Email</b></label>
        <input type="text" placeholder="Email" name="email" required>

        <label for="name"><b>Имя</b></label>
        <input type="text" placeholder="Имя" name="name" required>

        <label for="psw"><b>Пароль</b></label>
        <input type="password" placeholder="Пароль" name="psw" required>

        <label for="psw-repeat"><b>Подтверждение пароля</b></label>
        <input type="password" placeholder="Подтверждение пароля" name="psw_repeat" required>
        <hr>
        <button type="submit" class="registerbtn">Зарегестрироваться</button>
    </div>

    <div class="container signin">
        <p>Вы уже зарегестрированы? <a href="/Home/Enter">Войти</a>.</p>
    </div>
    <div>
        <ul>
            @{ 
                foreach (string item in ViewBag.error)
                {
                    <li>@item</li>
                }
            }
        </ul>
    </div>
</form>



    <script src="~/Content/js/Home/index.js"></script>

