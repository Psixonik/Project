@model IEnumerable<Project1.Models.Detail>
@using Project1.Models;

@{
    ViewBag.Title = "Склад";
}
<link rel="stylesheet" href="~/Content/css/Sklad/index.css">

<form name="axez" method="post" action="/Sklad/Index">
    <label>Назад</label><br>
    <a href='@Url.Action("Back","Bazaar")'>
        <img src="~/img/arrow.png" runat="server" alt="Назад" id="arrow_img" />
    </a>
    <h1>Склад</h1>

    <div id="list">
        <select name="dropdowntipo" id="DropDown", onchange = "SelectedIndexChanged(this)">
            @{
                foreach (var item in ViewBag.ListName)
                {
                    {
                        if (ViewBag.element == item)
                        {
                            <option value="@item" selected>@item</option>
                        }
                        else
                        {
                            <option value="@item">@item</option>
                        }
                    }                   
                }
            }
        </select>
        <!--<input type="submit" name="filtr" id="btnSearch" value="1">
    <input type="submit" name="filtr" id="btnAll" value="all">-->
    </div>


    <table class="table">
        <tr>
            <th>
                Наименование
            </th>
            <th>
                Тип
            </th>
            <th>
                Количество
            </th>
        </tr>
        @foreach (Detail item in ViewBag.details)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.col)
                </td>
            </tr>
        }

    </table>
</form>
<script type="text/javascript">
    function SelectedIndexChanged(txt) {
        //Form post
        //alert(txt.value);
        document.forms["axez"].submit();
    }
</script>

